<div class="container">
<h1> My Tasks </h1>

<ul>
  <% @tasks.each do |task| %>
  <% if task[:completed] == true %>
    <li> <i class="far fa-check-square"></i>
    <%= link_to task[:title], task_path(task.id) %>  </li>
    <% else %>
    <li>   <i class="far fa-square"></i> <%= link_to task[:title], task_path(task.id) %> -
    <%=  link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task.id),
      method: :delete,
      data: { confirm: "Are you sure?" }
      %></li>
    <% end %>
  <% end %>
</ul>

  <ul> <%= link_to "Add a new task", tasks_new_path %> </ul>

</div>
